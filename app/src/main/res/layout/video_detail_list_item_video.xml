<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/video_detail_thumbnail"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        tools:background="@tools:sample/backgrounds/scenic"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/video_detail_menu"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_more_vert_blacked_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/video_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        android:maxLines="2"
        android:text="@string/teste"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/video_detail_menu"
        app:layout_constraintStart_toEndOf="@id/video_detail_thumbnail"
        app:layout_constraintTop_toTopOf="@id/video_detail_thumbnail" />

    <TextView
        android:id="@+id/video_detail_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:maxLines="2"
        android:text="@string/teste"
        app:layout_constraintEnd_toEndOf="@id/video_detail_title"
        app:layout_constraintStart_toStartOf="@id/video_detail_title"
        app:layout_constraintTop_toBottomOf="@id/video_detail_title"/>







</androidx.constraintlayout.widget.ConstraintLayout>